@model FA.JustBlog.Services.ViewModels.Users.SignInViewModel
@{
    var message = ViewBag.Message;
}
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">
                </h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url(/wwwroot/assets/images/post-imgs/post-bg.jpg);">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Sign In</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center">
                                        <i class='bx bxl-facebook'></i>
                                    </a>
                                    <a href="#" onclick="googleLogin()" class="social-icon d-flex align-items-center justify-content-center">
                                        <i class='bx bxl-google-plus'></i>
                                    </a>
                                </p>
                            </div>
                        </div>
                        <form action="/account/signin" class="signin-form" method="post">
                            @if (!string.IsNullOrEmpty(message))
                            {
                                <div class="alert alert-danger">@message</div>
                            }
                            @Html.TextBoxFor(x => x.Id,
                                new
                                {
                                    @class = "form-control",
                                    @readonly = true,
                                    type = "hidden"
                                })
                            <div class="form-group mb-3">
                                @Html.LabelFor(x => x.UserName)
                                @Html.TextBoxFor(x => x.UserName,
                                    new
                                    {
                                        @class = "form-control",
                                        placeholder = "Username",
                                        required = true
                                    })
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(x => x.Password)
                                @Html.PasswordFor(x => x.Password,
                                    new
                                    {
                                        @class = "form-control",
                                        placeholder = "Password",
                                        required = true
                                    })
                            </div>
                            <div class="form-group mb-3">
                                <div class="g-recaptcha" data-sitekey="6Lern4AaAAAAAHcDkthqGVzuJ24Qq6_WIGhFSAyn"
                                     data-theme="dark" data-size="normal"></div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50 text-left">
                                    <label class="checkbox-wrap checkbox-primary mb-0">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#">Forgot Password</a>
                                </div>
                            </div>
                        </form>
                        <p class="text-center">
                            Not a member?
                            @Html.ActionLink("Register", "Register", "Account", null, null)
                        </p>
                        <div class="text-center">
                            Join us with guest account.
                            @Html.ActionLink("Guest Now", "Index", "Post", null, null)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>