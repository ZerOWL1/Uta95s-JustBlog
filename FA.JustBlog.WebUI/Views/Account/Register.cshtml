@using FA.JustBlog.Services.ViewModels.Users
@model RegisterViewModel
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">
                </h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Register</h3>
                            </div>
                        </div>
                        <form action="/account/register" class="signin-form" method="post">
                            <div class="form-group mb-3">
                                @Html.ValidationMessage("ErrorPass")
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(x => x.UserName)
                                @Html.TextBoxFor(x => x.UserName,
                                    new
                                    {
                                        @class = "form-control",
                                        placeholder = "Username",
                                        required = true
                                    })
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(x => x.Email)
                                @Html.TextBoxFor(x => x.Email,
                                    new
                                    {
                                        @class = "form-control",
                                        placeholder = "Email",
                                        required = true
                                    })
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(x => x.Password)
                                @Html.PasswordFor(x => x.Password,
                                    new
                                    {
                                        @class = "form-control",
                                        placeholder = "Password",
                                        required = true
                                    })
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(x => x.RePass)
                                @Html.PasswordFor(x => x.RePass,
                                    new
                                    {
                                        @class = "form-control",
                                        placeholder = "Re-Password",
                                        required = true
                                    })
                            </div>
                            <div class="form-group mb-3">
                                <div class="g-recaptcha" data-sitekey="6Lern4AaAAAAAHcDkthqGVzuJ24Qq6_WIGhFSAyn"
                                     data-theme="dark" data-size="normal"></div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Register</button>
                            </div>
                        </form>
                        <p class="text-center">
                            Already has account?
                            @Html.ActionLink("Sign In", "SignIn", "Account", null, null)
                    </div>
                    <div class="img" style="background-image: url(/wwwroot/assets/images/post-imgs/post-sample-image.jpg);">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
